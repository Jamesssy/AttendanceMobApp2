                    Grid.ColumnSpan="1"
                    
                    />
                <Label 
                    
                    Text="{Binding TodaysDate, StringFormat='{0:dddd, d MMMM yyyy}'}"
                    FontAttributes="Bold"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Start"
                    FontSize="15"
                    
                    Grid.Row="6"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"/>

            </Grid>
                                <!--</StackLayout>
                            </ContentView>
                        </ViewCell>
                    </DataTemplate>
