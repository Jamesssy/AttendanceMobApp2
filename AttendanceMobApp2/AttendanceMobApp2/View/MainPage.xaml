                    Grid.Column="0"/>
                <Label 
                    Text="{Binding FullName}" 
                    Grid.Row="0"
                    Grid.Column="1"/>-->
                <Label 
                    Text="{Binding CheckedInString}" 
                    HorizontalTextAlignment="Center"
                    Grid.Row="0" Grid.Column="0"
                    Grid.RowSpan="2"
                    VerticalTextAlignment="Center"
                    Grid.ColumnSpan="3" />
                    

                <Image Source="{Binding CheckedInImage}"
                       HeightRequest="60"
                       WidthRequest="60"
                       Grid.Row="2"
                       Grid.Column="1"
                        />
                
                
                <Label 
                    Text="Senast incheckad:" 
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold"
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"/>

                <Label 
                    Text="{Binding LastCheckedIn, StringFormat='{0:dddd, d MMMM yyyy}'}" 
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold"
                    FontSize="20"
                    TextColor="DeepSkyBlue"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"/>
                <Label 
                    Text="Dagens datum:" 
                    HorizontalTextAlignment="End"
                    FontAttributes="Bold"
                    FontSize="15"
                    VerticalTextAlignment="Center"
                    Grid.Row="6"
